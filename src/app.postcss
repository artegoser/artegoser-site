@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;

html,
body {
  @apply h-full overflow-hidden;
}

#content a {
  @apply anchor;
}

.nav-link {
  @apply font-bold;
}

.prose-lg img,
.prose-lg code {
  @apply rounded-3xl;
}

.prose-lg mark {
  @apply rounded-3xl p-1 bg-primary-500 text-primary-50;
}

.prose-lg blockquote {
  @apply blockquote;
}

.prose-lg kbd {
  @apply kbd;
}

.prose-lg ins {
  @apply ins;
}

.prose-lg del {
  @apply del;
}
